	IF("{EDIT_BID}"=="1"){<a href="{SITE_URL}bid.php?id={PROJECT_ID}"><img src="{SITE_URL}templates/{TPL_NAME}/images/edit_bid.gif" width="76" height="16" alt="" border="0"></a><br><br>{:IF}
</td>
